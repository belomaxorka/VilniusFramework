<!DOCTYPE html>
<html lang="ru" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <title>{{ title }}</title>
    {! vite('app') !}
</head>
<body class="h-full bg-gray-50">
    <div id="app" class="h-full flex items-center justify-center p-4">
        <div class="max-w-md w-full">
            <!-- Title -->
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">Vilnius</h1>
                <p class="text-gray-600">{{ greeting }}</p>
            </div>

            <!-- Main Card -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <!-- Server Info -->
                <div class="flex justify-between text-sm text-gray-600 mb-6 pb-6 border-b">
                    <span>PHP {{ phpVersion }}</span>
                    <span>{{ serverTime }}</span>
                </div>

                <!-- Vue Counter -->
                <welcome-counter :initial-count="{{ initialCount }}"></welcome-counter>
            </div>

            <!-- Dashboard Link -->
            <div class="text-center">
                <a href="/dashboard" class="text-blue-600 hover:text-blue-800 text-sm">
                    Dashboard â†’
                </a>
            </div>
        </div>
    </div>
</body>
</html>
