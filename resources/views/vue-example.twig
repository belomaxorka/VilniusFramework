{% extends 'layout.twig' %}

{% block title %}Vue 3 Example - {{ parent() }}{% endblock %}

{% block content %}
<div id="app">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                Vue 3 Integration
            </h1>
            <p class="text-xl text-gray-600">
                Полноценная интеграция Vue 3 с Composition API, как в Laravel
            </p>
        </div>

        <!-- Example Component -->
        <example-component
            title="Vue 3 в действии!"
            initial-message="Этот компонент полностью реактивный и работает с HMR"
        ></example-component>

        <!-- Counter Component -->
        <counter
            :initial-value="0"
            :step="1"
            @update:count="handleCountUpdate"
            @reset="handleCountReset"
        ></counter>

        <!-- Alert Components -->
        <div class="mt-6">
            <alert type="success" title="Успех!" message="Vue 3 успешно интегрирован в ваш фреймворк!"></alert>
            <alert type="info" message="Используйте Composition API для создания переиспользуемой логики"></alert>
            <alert type="warning" :dismissible="false" message="Не забудьте запустить 'npm install' для установки зависимостей"></alert>
        </div>

        <!-- Features Grid -->
        <div class="grid md:grid-cols-3 gap-6 mt-12">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="text-primary-600 mb-3">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">Composition API</h3>
                <p class="text-gray-600">Используйте современный Composition API для лучшей организации кода</p>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="text-primary-600 mb-3">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">Composables</h3>
                <p class="text-gray-600">Готовые composables для API, форм и общей логики</p>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="text-primary-600 mb-3">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">HMR Support</h3>
                <p class="text-gray-600">Hot Module Replacement работает "из коробки"</p>
            </div>
        </div>

        <!-- Documentation Link -->
        <div class="mt-12 text-center">
            <a href="/docs" class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-8 rounded-lg transition-colors">
                Читать документацию
            </a>
        </div>
    </div>
</div>
{% endblock %}

