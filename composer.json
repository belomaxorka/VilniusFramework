{
  "name": "belomaxorka/framework",
  "description": "Lightweight PHP CMS Framework",
  "type": "project",
  "homepage": "https://github.com/belomaxorka/framework",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "belomaxorka",
      "email": "roman25052006.kelesh@gmail.com",
      "homepage": "https://github.com/belomaxorka"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "pestphp/pest": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "init-project": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "@php ./vendor/bin/pest",
    "test-coverage": "@php ./vendor/bin/pest --coverage",
    "test-coverage-html": "@php ./vendor/bin/pest --coverage-html=coverage"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
