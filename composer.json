{
  "name": "belomaxorka/vilnius-framework",
  "description": "A modern, lightweight PHP framework",
  "type": "project",
  "homepage": "https://github.com/belomaxorka/VilniusFramework",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "belomaxorka",
      "email": "roman25052006.kelesh@gmail.com",
      "homepage": "https://github.com/belomaxorka"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "pestphp/pest": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "classmap": [
      "tests/Unit/Core/Database/BaseModelTest.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "setup": [
      "composer install --no-dev",
      "@php -r \"! file_exists('.env') || copy('.env.example', '.env');\"",
      "npm install",
      "npm run build"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [],
    "test": "@php ./vendor/bin/pest",
    "test-coverage": "@php ./vendor/bin/pest --coverage",
    "test-coverage-html": "@php ./vendor/bin/pest --coverage-html=coverage"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
